{
  "name": "@jsweb/params",
  "version": "3.0.1",
  "description": "Simple JS module to parse/serialize HTTP query/params, useful for Fetch API or AJAX requests",
  "main": "dist/main.js",
  "esnext": "src/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsweb/params.git"
  },
  "keywords": [
    "parse",
    "serialize",
    "query",
    "params",
    "form",
    "data",
    "FormData",
    "http",
    "js",
    "javascript"
  ],
  "author": "Alex Bruno <git.alexbr@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jsweb/params/issues"
  },
  "homepage": "https://params.jsweb.app",
  "scripts": {
    "dist": "run-s dist:*",
    "dist:build": "rollup -c",
    "dist:minify": "minify dist -d dist",
    "dist:banner": "concat src/author.js dist/main.js -o dist/main.js",
    "test": "npm run dist && mocha dist",
    "report": "npm t -- --reporter mochawesome --reporter-options reportTitle=@jsweb/params"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "babel-minify": "^0.4.3",
    "concat": "^1.0.3",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.3",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.2"
  }
}
