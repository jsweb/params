{
  "name": "@jsweb/params",
  "version": "4.0.1",
  "description": "Simple JS module to parse/serialize HTTP query/params, useful for Fetch API or AJAX requests",
  "scripts": {
    "test": "run-s test:*",
    "test:lint": "npm run lint",
    "test:build": "rollup -c",
    "test:clean": "rm -rf mochawesome-report",
    "test:report": "mocha test.js --reporter mochawesome --reporter-options reportTitle=@jsweb/params",
    "major": "npm version major && npm run push",
    "minor": "npm version minor && npm run push",
    "patch": "npm version patch && npm run push",
    "push": "git push && git push --tags",
    "lint": "prettier --write src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsweb/params.git"
  },
  "keywords": [
    "parse",
    "serialize",
    "query",
    "params",
    "form",
    "data",
    "FormData",
    "http",
    "js",
    "javascript"
  ],
  "author": "Alex Bruno <git.alexbr@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jsweb/params/issues"
  },
  "homepage": "https://params.jsweb.app",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "husky": "^4.2.5",
    "lodash": "^4.17.15",
    "mocha": "^8.0.1",
    "mochawesome": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "object-to-formdata": "^3.0.9",
    "prettier": "^2.0.5",
    "rollup": "^2.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && git add ."
    }
  },
  "type": "module",
  "main": "index.js",
  "esnext": "index.js",
  "module": "index.js"
}
